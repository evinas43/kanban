<Window x:Class="Kanban.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kanban"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#FF0D1B2A" Offset="0"/>
                <GradientStop Color="#FF1B2B3A" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid Margin="238,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Width="300px" Height="200px">
            <StackPanel>
                <TextBlock Text="Log In" 
                       Foreground="White"
                       FontSize="24"
                       FontWeight="Bold" HorizontalAlignment="Center"/>
                <StackPanel Margin="20">
                    <TextBlock Text="Username" 
                       Foreground="White"
                       FontSize="14"
                       FontWeight="Bold" HorizontalAlignment="left"/>
                    <TextBox x:Name="username" Background="Transparent"  Foreground="White" BorderBrush="White" Margin="0,0,0,10">

                    </TextBox>
                    <TextBlock Text="Password" 
                       Foreground="White"
                       FontSize="14"
                       FontWeight="Bold" HorizontalAlignment="left"/>
                    <PasswordBox x:Name="password"  Background="Transparent" Foreground="White" BorderBrush="White">
                      
                    </PasswordBox>
                </StackPanel>
                <Button Content="Iniciar Sesión" Width="120" Height="26" Background="#FFA000"
                    Foreground="White" FontWeight="Bold" Click="IniciarSesion_Click"/>

                <TextBlock x:Name="txtError" Grid.Row="2" Foreground="Tomato" Visibility="Collapsed" Text="Usuario/contraseña incorrectos" Margin="0,0,0,0" HorizontalAlignment="Center"/>

            </StackPanel>
        </Grid>


    </Grid>
</Window>
